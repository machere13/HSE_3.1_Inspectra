<div class="PageProfile">
  <%= render 'shared/wrappers/W_PageHeader' %>
  <section class="PageProfile-Section-Main">
    <div class="PageProfile-Section-Title">
      <div class="PageProfile-Header">
        <div class="PageProfile-Avatar-Wrapper">
          <% if @user.avatar.attached? %>
            <%= image_tag url_for(@user.avatar), alt: @user.name || @user.email, class: 'PageProfile-Avatar' %>
          <% elsif @user.avatar.present? %>
            <img src="<%= @user.avatar %>" alt="<%= @user.name || @user.email %>" class="PageProfile-Avatar" />
          <% else %>
            <div class="PageProfile-Avatar PageProfile-Avatar--placeholder"></div>
          <% end %>
          <%= form_with url: update_avatar_path, method: :patch, local: true, multipart: true, class: 'PageProfile-Avatar-Form' do |f| %>
            <%= f.file_field :avatar, accept: 'image/*', class: 'PageProfile-Avatar-Input', id: 'avatar-upload' %>
            <label for="avatar-upload" class="PageProfile-Avatar-Label">
              <span class="text-caption"><%= @user.avatar.attached? || @user.avatar.present? ? t('pages.profile.avatar.change') : t('pages.profile.avatar.upload') %></span>
            </label>
          <% end %>
        </div>
        <div class="PageProfile-Header-Info">
          <div class="PageProfile-Info-Plugs">
            <%= render 'pages/profile/M_ProfileInfoPlug', text: "#{@user.name.presence || t('pages.profile.no_name')}" %>
            <%= render 'pages/profile/M_ProfileInfoPlug', text: "Роль: #{@user.role}" %>
            <% if @user.current_title %>
              <%= render 'pages/profile/M_ProfileInfoPlug', text: "Титул: #{@user.current_title.name}" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="PageProfile-Section-Content">
      <div class="PageProfile-Section-Content-Plate">
        <h3 class="text-h3"><%= t('pages.profile.stats.title') %></h3>
        <div class="PageProfile-Stats">
          <div class="PageProfile-Stat">
            <span class="text-labels-2"><%= t('pages.profile.stats.completed_achievements') %></span>
            <span class="text-h4"><%= @completed_achievements.count %></span>
          </div>
          <div class="PageProfile-Stat">
            <span class="text-labels-2"><%= t('pages.profile.stats.in_progress_achievements') %></span>
            <span class="text-h4"><%= @in_progress_achievements.count %></span>
          </div>
        </div>
      </div>

      <% if @completed_achievements.any? %>
        <div class="PageProfile-Section-Content-Plate">
          <h3 class="text-h3"><%= t('pages.profile.achievements.completed.title') %></h3>
          <div class="PageProfile-Achievements">
            <% @completed_achievements.each do |user_achievement| %>
              <div class="PageProfile-Achievement">
                <span class="text-p-2"><%= user_achievement.achievement.name %></span>
                <span class="text-caption"><%= user_achievement.completed_at.strftime(t('time.formats.short')) %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @in_progress_achievements.any? %>
        <div class="PageProfile-Section-Content-Plate">
          <h3 class="text-h3"><%= t('pages.profile.achievements.in_progress.title') %></h3>
          <div class="PageProfile-Achievements">
            <% @in_progress_achievements.each do |user_achievement| %>
              <div class="PageProfile-Achievement">
                <span class="text-p-2"><%= user_achievement.achievement.name %></span>
                <span class="text-caption"><%= t('pages.profile.achievements.in_progress.progress', progress: user_achievement.progress) %>%</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
