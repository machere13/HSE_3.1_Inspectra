<div class="PageHome">
  <%= render 'shared/wrappers/W_PageHeader' do %>
    <div class="W_PageHeader-Inner">
      <%= render 'shared/molecules/M_ContentTimer', week: @current_week %>
    </div>
  <% end %>
  <div class="PageHome-Content">
    <div class="PageHome-Weeks-List">
      <% if @current_week %>
        <%= render 'pages/home/W_CardWeekCurrent', week: @current_week %>
      <% end %>
    
      <% if @expired_weeks.any? %>
        <%= render 'pages/home/W_CardsWeek404', cards: @expired_weeks %>
      <% end %>
    </div>
  </div>
</div>
