<div class="SO_InteractiveSpace" style="display: none;" data-interactive-type="<%= local_assigns[:type] || 'blind_in_dom' %>">
  <div class="SO_InteractiveSpace-Modal">
    <div class="SO_InteractiveSpace-Header">
      <div class="SO_InteractiveSpace-Header-Icons">
        <%= render 'shared/quarks/Q_Icon', name: 'Q_AsteriskIcon', width: 24, height: 24 %>
        <button class="SO_InteractiveSpace-Close" id="interactive-space-close">×</button>
      </div>
      <div class="SO_InteractiveSpace-Header-Info">
          <p class="SO_InteractiveSpace-Header-Title text-p-1-mono">ТВОЯ ЗАДАЧА — НАЙТИ В DOM-ДЕРЕВЕ ЭТОЙ СТРАНИЦЫ УНИКАЛЬНЫЙ ТОКЕН</p>
          <p class="SO_InteractiveSpace-Header-Subtitle text-p-1-mono">НАЙДИ И ИСПОЛЬЗУЙ ЕГО, ИНАЧЕ ОН ИСЧЕЗНЕТ</p>
      </div>
      <div class="SO_InteractiveSpace-Header-Actions">
        <%= render 'shared/atoms/A_Input', name: 'interactive_token', placeholder: 'ВВЕСТИ ТОКЕН', id: 'interactive-token-input' %>
        <%= render 'shared/atoms/A_Button', text: 'ОТПРАВИТЬ', id: 'interactive-submit-button' %>
      </div>
    </div>
    <div class="SO_InteractiveSpace-Content">
      <% if block_given? %>
        <%= yield %>
      <% else %>
        <div class="SO_InteractiveSpace-Content-Default">
          <%= local_assigns[:content] || 'Контент интерактива' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

