<%
  icon_name = case local_assigns[:type]
  when 'home'
    'Q_BreadcrumbHomeIcon'
  when 'week'
    'Q_BreadcrumbWeekIcon'
  when 'article'
    'Q_BreadcrumbArticleIcon'
  else
    nil
  end
%>
<%= link_to href, class: "M_BreadcrumbsItem text-labels-1" do %>
  <% if icon_name %>
    <%= render 'shared/quarks/Q_Icon', name: icon_name, width: 24, height: 24 %>
  <% end %>
  <span class="M_BreadcrumbsItem-Text text-labels-1"><%= text %></span>
<% end %>