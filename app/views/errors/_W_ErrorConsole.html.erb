<%
  max_w = local_assigns[:max_width]
  style_attr = ""
  if max_w.present?
    style_value = max_w.is_a?(String) ? max_w : "#{max_w}px"
    style_attr = "max-width: #{style_value}"
  end
%>

<div class="W_ErrorConsole" style="<%= style_attr %>">
  <div class="W_ErrorConsole-Header">
    <h4 class="text-code"><%= local_assigns[:error] %></h4>
  </div>
  <div class="W_ErrorConsole-Content">
    <pre class="W_ErrorConsole-Content-Code-Response text-code"><%= local_assigns[:response] %></pre>
  </div>
</div>