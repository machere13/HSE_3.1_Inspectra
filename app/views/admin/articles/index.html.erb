<h1>Статьи дня <%= @day.number %></h1>

<p><%= link_to 'Новая статья', new_admin_day_article_path(@day) %></p>

<% if @pagy.count > 0 %>
  <p><%= @pagy.from %>-<%= @pagy.to %> из <%= @pagy.count %></p>
<% end %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, admin_day_article_path(@day, article) %>
      — <%= link_to 'Редактировать', edit_admin_day_article_path(@day, article) %>
    </li>
  <% end %>
</ul>

<%= pagy_nav(@pagy) if @pagy.pages > 1 %>

<%= link_to 'Назад к дню', admin_day_path(@day) %>

