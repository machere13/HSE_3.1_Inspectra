<h1>Дни</h1>

<p><%= link_to 'Новый день', new_admin_day_path %></p>

<% if @pagy.count > 0 %>
  <p><%= @pagy.from %>-<%= @pagy.to %> из <%= @pagy.count %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Название</th>
      <th>Публикация</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.number %></td>
        <td><%= link_to day.title, admin_day_path(day) %></td>
        <td><%= l day.published_at.in_time_zone %> — <%= l day.expires_at.in_time_zone %></td>
        <td>
          <%= link_to 'Редактировать', edit_admin_day_path(day) %> |
          <%= link_to 'Удалить', admin_day_path(day), data: { turbo_method: :delete, turbo_confirm: 'Удалить день?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>

<%= pagy_nav(@pagy) if @pagy.pages > 1 %>

