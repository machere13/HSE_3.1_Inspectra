<h1><%= @content_item.title.presence || '(без названия)' %></h1>
<p><strong>Тип:</strong> <%= @content_item.kind %></p>
<p><strong>Позиция:</strong> <%= @content_item.position %></p>
<p><strong>URL:</strong> <%= @content_item.url %></p>
<div>
  <%= simple_format @content_item.body %>
</div>
<% if @content_item.metadata.present? %>
  <pre><%= JSON.pretty_generate(@content_item.metadata) %></pre>
<% end %>

<p>
  <%= link_to 'Редактировать', edit_admin_day_content_item_path(@day, @content_item) %> |
  <%= button_to 'Удалить', admin_day_content_item_path(@day, @content_item), method: :delete, form: { data: { turbo_confirm: 'Удалить этот контент?' }, style: 'display:inline' } %> |
  <%= link_to 'Назад к списку', admin_day_content_items_path(@day) %>
</p>


