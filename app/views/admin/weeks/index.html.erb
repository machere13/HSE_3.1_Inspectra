<h1>Недели</h1>

<p><%= link_to 'Новая неделя', new_admin_week_path %></p>

<% if @pagy.count > 0 %>
  <p><%= @pagy.from %>-<%= @pagy.to %> из <%= @pagy.count %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Название</th>
      <th>Публикация</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.number %></td>
        <td><%= link_to week.title, admin_week_path(week) %></td>
        <td><%= l week.published_at.in_time_zone %> — <%= l week.expires_at.in_time_zone %></td>
        <td>
          <%= link_to 'Редактировать', edit_admin_week_path(week) %> |
          <%= link_to 'Удалить', admin_week_path(week), data: { turbo_method: :delete, turbo_confirm: 'Удалить неделю?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>

<%= pagy_nav(@pagy) if @pagy.pages > 1 %>

