<h1><%= t('auth.login.title') %></h1>
<%= form_with url: login_path, method: :post do |f| %>
  <%= label_tag :email, t('auth.login.email_label') %>
  <%= email_field_tag :email, nil, required: true %>
  <%= label_tag :password, t('auth.login.password_label') %>
  <%= password_field_tag :password, nil, required: true %>
  <%= submit_tag t('auth.login.submit') %>
<% end %>
<p><%= link_to t('auth.login.forgot_link'), forgot_path %></p>
<script></script>
