<div class="PageArticle">
  <%= render 'shared/wrappers/W_PageHeader' do %>
    <div class="W_PageHeader-Inner">
      <%= render 'shared/organisms/O_Breadcrumbs', items: [
        { text: 'HOME', href: root_path, type: 'home' },
        { text: "WEEK #{@week.number}", href: week_path(@week), type: 'week' },
        { text: @article.title, href: week_article_path(@week, @article), type: 'article' }
      ] %>
      <h3><%= @article.title %></h3>
      <h4><%= @article.description %></h4>
    </div>
  <% end %>
    <div class="PageArticle-Content">
        <%= @article.body %>
    </div>
</div>
