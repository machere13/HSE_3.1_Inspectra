<%= link_to week_article_path(week, article), class: 'O_ArticleCard' do %>
  <%= render 'weeks/M_ContentCard', type: 'article', label: 'ARTICLE', width: '100%' %>
  <div class="O_ArticleCard-Title">
    <h4><%= article.title %></h4>
    <p><%= article.description.presence || truncate(article.body, length: 120) %></p>
  </div>
  <div class="O_ArticleCard-Footer">
    <p class="text-p-3">| CASE_<%= week.number %></p>
    <p class="text-p-3">| статья_<%= article.id %> мин чтения</p>
    <p class="text-p-3">| time_left: <span data-countdown data-expires-at="<%= week.expires_at.iso8601 %>" class="timer-value"><%= week.time_left %></span></p>
    <p class="text-p-3">| [> прочитать кейс]</p>
  </div>
<% end %>

